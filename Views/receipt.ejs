<!DOCTYPE html>
<html lang="en">
<head>
  <!-- general meta tags -->
  <meta charset="utf-8">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- site specific tags -->
  <title></title>
  <!-- style sheets -->
  <link rel="stylesheet" href="css-reset.css">
  <link rel="stylesheet" href="/css/styles.css">
  <!-- javascript files -->
  <link rel="icon" type="images/png" href="/images/favecone.png">

</head>
<body>
  <header class="menu-page-header">
    <a href="/ChoicePage"><img src="/images/logo.png" alt="ServeHarmony Logo" class="logo"></a>
      <a href="/ChoicePage"><h1>Order Receipt</h1></a>
  </header>
  <main>
    <section class="order-receipt">
      <h3 class="order-id">Order ID: <%= order._id %></h3>
      <h3 class="order-status">Order Status: <%= order.status %></h3>
      <h3 class="details-header">Details:</h3>
        <% if (order && order.menuitems) { %>
            <ul class="order-items-grid">
            <% order.menuitems.forEach(item => { %>
                <li class="order-item-card">
                    <img src="/images/<%= item.itemImg %>" class="item-img" alt="<%= item.itemName %>">
                    <div class="item-details">
                        <h3 class="item-name"><%= item.itemName %></h3>
                        <p class="item-price">Price: <%= item.itemPrice %> SAR</p>
                        <p class="item-quantity">Quantity: <%= item.quantity %></p>
                    </div>
                </li>
            <% }); %>
            </ul>
        <% }; %>
    </section>
  </main>
  <footer>
    
  </footer>
</body>
</html>