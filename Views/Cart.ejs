<!DOCTYPE html>
<html lang="en">
<head>
  <!-- general meta tags -->
  <meta charset="utf-8">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- site specific tags -->
  <title></title>
  <!-- style sheets -->
  <!-- <link rel="stylesheet" href="css-reset.css"> -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <main>
      <div>
        <% if (cart && cart.length > 0){ %>
          <ul>
            <% cart.forEach(item => { %>
            <li class="card">
              <img src="/images/<%= item.itemImg %>" id="Image">
              <h3><%= item.itemName %></h3>
              <p>Price: <%= item.itemPrice %> SAR</p>
              <p>quantity: <%= item.quantity %></p>
            </li>
          <% }); %>
        </ul>
        <% } %>
        <button>Confirm Order</button>
      </div>
    </section>
  </main>
</body>
</html>
