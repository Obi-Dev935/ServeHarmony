<!DOCTYPE html>
<html lang="en">
<head>
  <!-- general meta tags -->
  <meta charset="utf-8">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- site specific tags -->
  <title></title>
  <!-- style sheets -->
  <link rel="stylesheet" href="css-reset.css">
  <link rel="stylesheet" href="/css/styles.css">
  <!-- javascript files -->
</head>
<body>
  <header>
    

    
  </header>
  <main>
    <section>
      <h1>Order Receipt</h1>
      <h2>Order ID: <%= order._id %></h2>
      <h3>Details:</h3>
        <% if (order && order.menuitems) { %>
            <ul class="grid">
            <% order.menuitems.forEach(item => { %>
                <li class="card">
                    <img src="/images/<%= item.itemImg %>" id="Image">
                    <h3><%= item.itemName %></h3>
                    <p>Price: <%= item.itemPrice %> SAR</p>
                </li>
            <% }); %>
            </ul>
        <% }; %>
    </section>
  </main>
  <footer>
    
  </footer>
</body>
</html>