<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/styles.css" />
    <title>Table Reservations</title>
</head>
<body>

    <header class="menu-page-header">
        <a href="/"><img src="/images/logo.png" alt="ServeHarmony Logo" class="logo"></a>
          <a href="/"><h1>Reserved Tables</h1></a>
      </header>
    <main class="reservations-container">
        <% if (reservations.length > 0) { %>
        <table class="reservations-table">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Number of People</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Special Requests</th>
                </tr>
            </thead>
            <tbody>
                <% reservations.forEach(reservation => { %>
                <tr>
                    <td><%= reservation.name %></td>
                    <td><%= reservation.people %></td>
                    <td><%= reservation.date.toDateString() %></td>
                    <td><%= reservation.time %></td>
                    <td><%= reservation.specialRequests || 'None' %></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
        <% } else { %>
        <p class="no-reservations">No reservations found.</p>
        <% } %>
    </main>
    <footer>
        <p>&copy; 2023 ServeHarmony</p>
    </footer>
</body>
</html>
